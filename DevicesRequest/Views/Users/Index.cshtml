@model IEnumerable<DevicesRequest.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3><i class="fa fa-list"></i> <strong class="title"> List Users</strong> </h3><br>
<a class="btn btn-info btn-sm " href="@Url.Action("Create", "Users")"><i class="fa fa-plus"></i> Create User</a>


<div class="panel custom-box">
    <table class="table" style="text-align:left">
        <tr style="color:#0084bd">
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.FirstNameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastNameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephon)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.NameEn)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Position.NameEn)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.FirstNameEn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastNameEn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobNumber)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Telephon)
                </td>


                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.UserId }, new { @class = "btn btn-primary btn-xs fa fa-pencil tooltips", data_placement = "top", title = "Edit", @style = "line-height: unset" })
                    @Html.ActionLink(" ", "Details", new { id = item.UserId }, new { @class = "btn btn-warning btn-xs fa fa-folder-open-o tooltips", data_placement = "top", title = "Details", @style = "line-height: unset" })
                    @Html.ActionLink(" ", "Delete", new { id = item.UserId }, new { @class = "btn btn-danger btn-xs fa fa-trash-o tooltips", data_placement = "top", title = "Delete", @style = "line-height: unset" })
                </td>
            </tr>
        }

    </table>

</div>