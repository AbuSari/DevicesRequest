@model IEnumerable<DevicesRequest.Models.TreatmentHistory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3><i class="fa fa-list"></i> <strong class="title"> List Treatment</strong> </h3><br>
<div class="panel custom-box">
    <table class="table" style="text-align:left">
        <tr style="color:#0084bd">
            <th>
                Applicant
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StutusId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestItem.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdateBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdateDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestItem.User.FirstNameEn)
                    @Html.DisplayFor(modelItem => item.RequestItem.User.LastNameEn)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.RequestStatu.NameEn)*@
                    <span class="@item.RequestStatu.Color"> @item.RequestStatu.NameEn </span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestItem.Item.NameEn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastUpdateBy)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.LastUpdateDate)*@
                    @Convert.ToDateTime(item.LastUpdateDate).ToString("dd/MM/yyyy")

                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TreatmentHistoryId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TreatmentHistoryId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TreatmentHistoryId })
                </td>
            </tr>
        }

    </table>
