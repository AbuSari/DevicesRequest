@model IEnumerable<DevicesRequest.Models.Item>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

<h3><i class="fa fa-list"></i> <strong class="title"> List Item</strong> </h3><br>
<a class="btn btn-info btn-sm " href="@Url.Action("Create", "Items")"><i class="fa fa-plus"></i> Create Item</a>


<div class="panel custom-box">
    <table class="table" style="text-align:left">
        <tr style="color:#0084bd">
            <th>
                @Html.DisplayNameFor(model => model.NameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitsInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitsOnOrder)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameEn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameAr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.CreatedDate)*@
                    @Convert.ToDateTime(item.CreatedDate).ToString("dd/MM/yyyy")

                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UnitsInStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitsOnOrder)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.ItemId }, new { @class = "btn btn-primary btn-xs fa fa-pencil tooltips", data_placement = "top", title = "Edit", @style = "line-height: unset" })
                    @Html.ActionLink(" ", "Details", new { id = item.ItemId }, new { @class = "btn btn-warning btn-xs fa fa-folder-open-o tooltips", data_placement = "top", title = "Details", @style = "line-height: unset" })
                    @Html.ActionLink(" ", "Delete", new { id = item.ItemId }, new { @class = "btn btn-danger btn-xs fa fa-trash-o tooltips", data_placement = "top", title = "Delete", @style = "line-height: unset" })
                </td>
            </tr>
        }

    </table>
    </body>
    </html>
