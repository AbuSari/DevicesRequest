@model IEnumerable<DevicesRequest.Models.RequestItem>

@{
    ViewBag.Title = "Need Transaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3><i class="fa fa-list"></i> <strong class="title"> Need Transaction</strong> </h3><br>

<div class="panel custom-box">
    @if (Model.Count() != 0)
    {
        <table class="table" style="text-align:left">
            <tr style="color:#0084bd">
                <th>
                    @Html.DisplayNameFor(model => model.Item)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TypeOfRequest)
                </th>
                <th>
                    Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequestDate)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item.NameEn)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.TypeOfRequest.NameEn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.FirstNameEn)
                        @Html.DisplayFor(modelItem => item.User.LastNameEn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.RequestDate)*@
                        @Convert.ToDateTime(item.RequestDate).ToString("dd/MM/yyyy")

                    </td>

                    <td>
                        @Html.ActionLink(" ", "Details", new { id = item.RequestItemsId }, new { @class = "btn btn-info btn-xs fa fa-file tooltips", data_placement = "top", title = "Details", @style = "line-height: unset" })

                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <div class="centered">
          
            <h4> You don't have any <b>Active</b> Request </h4>
        </div>
    }
